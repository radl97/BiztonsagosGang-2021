<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WorkTimeManager" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_accent</item>
        <item name="colorPrimaryVariant">@color/primary_accent</item>
        <item name="colorOnPrimary">@color/primary_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_accent</item>
        <item name="colorSecondaryVariant">@color/primary_accent</item>
        <item name="colorOnSecondary">@color/primary_accent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar_bg</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.WorkTimeManager.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.WorkTimeManager.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.WorkTimeManager.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>